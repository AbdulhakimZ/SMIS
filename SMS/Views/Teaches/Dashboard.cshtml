
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a>Dashboard</a></li> 
            </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.container-fluid -->


<div class="row">
    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box bg-success">
            <span class="info-box-icon"><i class="far fa-calendar-alt"></i></span>
            <a href="~/Attendances/AttendanceMonth/?month=09/@DateTime.Now.Year">
                <div class="info-box-content">
                    <h3><span class="info-box-text">@Session["totalDept"]</span></h3>
                    <h4> <span class="info-box-number">Departments</span></h4>
                </div>
            </a>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>

    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box bg-info">
            <span class="info-box-icon"><i class="far fa-calendar-alt"></i></span>
            <a href="~/Attendances/AttendanceMonth/?month=10/@DateTime.Now.Year">
                <div class="info-box-content">
                    <h3><span class="info-box-text">@Session["totalCourses"]</span></h3>
                    <h4> <span class="info-box-number">Courses</span></h4>
                </div>
            </a>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>

    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box bg-olive">
            <span class="info-box-icon"><i class="far fa-calendar-alt"></i></span>
            <a href="~/Attendances/AttendanceMonth/?month=11/@DateTime.Now.Year">
                <div class="info-box-content">
                    <h3><span class="info-box-text">@Session["totalStudents"]</span></h3>
                    <h4><span class="info-box-number">Students</span></h4>
                </div>
            </a>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>

    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box bg-danger">
            <span class="info-box-icon"><i class="far fa-calendar-alt"></i></span>
            <a href="~/Attendances/AttendanceMonth/?month=12/@DateTime.Now.Year">
                <div class="info-box-content">
                    <h3><span class="info-box-text">@Session["totalTeachers"]</span></h3>
                    <h4><span class="info-box-number">Teachers</span></h4>
                </div>
            </a>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>

</div>


